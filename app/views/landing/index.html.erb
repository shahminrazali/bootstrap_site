<div class="landing">
  <section class="intro">
    <div class="background">
      <div class="content text-center">
        <h1>
          Two Wheel Trouble
        </h1>
        <h2>
          For Those Who Live For The Ride
        </h2>
      </div>
    </div>
  </section>

  <section class ="about-us">
    <div class = "content text-center">
      <h1>
        Welcome to Two Wheel Trouble
      </h1>
      <h2>
        A place to chill out to discuss on our favourite
        two wheeled machines. Have fun!
      </h2>
    </div>
  </section>

  <section class="features">
    <div class = "content text-center">
      <h3>
        Get in touch with us!
      </h3>
    </div>

    <div class = "feature-list text-center">

      <div class="feature">
        <%= fa_icon 'globe 4x'%>
        <a href="https://twitter.com/amsyar_bickle">
        <div class="textbox">
            <h4> Fostering communities </h4>
        </div>
        </a>
      </div>

      <div class="feature">
        <%= fa_icon 'twitter 4x'%>
       <a href="https://twitter.com/amsyar_bickle">
        <div class="textbox">
            <h4> Tweet Up! </h4>
        </div>
        </a>
      </div>

      <div class="feature">
        <%= fa_icon 'instagram 4x'%>
        <a href="https://instagram.com/tun_amsyar">
        <div class="textbox">
            <h4> IG us up! </h4>
        </div>
        </a>
      </div>

      <div class="feature">
        <%= fa_icon 'facebook 4x' %>
        <a href="https://facebook.com/">
        <div class="textbox">
            <h4> The Facebook</h4>
        </div>
        </a>
      </div>
    </div>
  </section>

  <section class="minipics">
    <div class="image_tag">
      <div class="invisible-layout">
        <%= image_tag "bell.jpeg", class: 'image_box' %>
      </div>
    </div>
    <div class="image_tag">
      <div class="invisible-layout">
        <%= image_tag "honda1.jpeg", class: 'image_box' %>
      </div>
    </div>
    <div class="image_tag">
      <div class="invisible-layout">
        <%= image_tag "honda.jpeg", class: 'image_box' %>
      </div>
    </div>
    <div class="image_tag">
      <div class="invisible-layout">
        <%= image_tag "pillion.jpeg", class: 'image_box' %>
      </div>
    </div>
  </section>
</div>
