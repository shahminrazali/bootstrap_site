$('#flash-messages-container').html("<%=j render partial: 'partials/flash_messages' %>")

<% if @post.persisted? %>
  $('#posts').append("<%=j render partial: 'posts/post', locals: { topic: @topic, post: @post } %>")
  $('#posts-form-container').html("<%=j render partial: 'posts/form', locals: { topic: @topic, post: @new_post } %>")
<% end %>
