<div class="post_child">
  <h3><%= link_to post.title, topic_post_comments_path(post.topic,post) %></h3>
  <h5><%= post.body %></h5>

  <%= image_tag post.image %>
  <%= link_to "Edit Post", edit_topic_post_path(topic, post) %>
