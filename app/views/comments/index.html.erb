<div class="comments">
  <h1>Comments</h1>
  <section class="background">
    <div class="comment_parent">
      <% @comments.each do |comment| %>
      <div class="comment_child">
          <h1><%= comment.body %></h1>
          <%= image_tag comment.image %>
          <%= link_to "Edit Comment", edit_topic_post_comment_path(@topic, @posts, comment) %>
          <%= link_to "Delete", topic_post_comment_path(@topic, @posts, comment), method: :delete, data: { confirm: "Delete?" } %>
      </div>
    <% end %>
    </div>
    
        <div class="add_new">
          <h2><%= link_to "Add New Comment", new_topic_post_comment_path %></h2>
        </div>

  </section>
</div>
