<div class="comment" data-id="<%= comment.id %>">
  <h1><%= comment.body %></h1>

  <div class = "votes">
    <h2>total votes</h2><%= comment.total_votes %>
    <h2>total upvote</h2><%= comment.total_upvote %>
    <h2>total downvote</h2><%= comment.total_downvote %>
  </div>

  <%= link_to "upvote", upvote_path(comment_id: comment.id),method: :post, remote: true %>
  <%= link_to "downvote", downvote_path(comment_id: comment.id),method: :post, remote: true %>

  <div class='control-panel'>
    <%= comment.user == current_user %>
    <% if comment.user ==  current_user || current_user&.admin? || current_user&.moderator? %>
    <%= link_to "Edit Comment", edit_topic_post_comment_path(post.topic, post, comment), remote: true %>
    <%= link_to "Delete", topic_post_comment_path(post.topic, post, comment), method: :delete, remote: true, data: { confirm: "Delete?" } %>
    <% end %>
  </div>
</div>
