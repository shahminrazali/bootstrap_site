$('#flash-messages-container').html("<%=j render partial: 'partials/flash_messages' %>")

<% if @comment.persisted? %>
  $('#comments').append("<%=j render partial: 'comments/comment', locals: { comment: @comment, post: @comment.post, topic: @topic } %>")
  $('#comments-index-container').html("<%=j render partial: 'comments/form', locals: { comment: @new_comment, post: @post, topic: @topic } %>")
<% end %>
